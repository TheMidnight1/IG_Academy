<!-- Student Form Modal -->
<div
  class="modal fade"
  id="studentModal"
  tabindex="-1"
  aria-labelledby="studentModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="studentModalLabel">Call for Tutor</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="studentForm">
          <!-- Name Input -->
          <div class="mb-3">
            <label for="studentName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="studentName"
              name="studentName"
              required
            />
          </div>

          <!-- Level Dropdown -->
          <div class="mb-3">
            <label for="studentLevel" class="form-label">Level</label>
            <% const levelCategory = categories.find(cat => cat.slug ===
            "level"); const levelChildCategories = categories.filter(category =>
            category.parent && category.parent._id.toString() ===
            levelCategory._id.toString() ); %>
            <select
              name="level"
              class="form-control select2"
              id="level-student"
              style="width: 100%"
              required
            >
              <option value="">Select Level</option>
              <% levelChildCategories.forEach(childCat => { %>
              <option value="<%= childCat.slug %>">
                <%= childCat.title %>
              </option>
              <% }); %>
            </select>
          </div>

          <!-- Subject Dropdown -->
          <div class="mb-3">
            <label for="studentSubject" class="form-label"
              >Subject for Tutor</label
            >
            <% const subjectCategory = categories.find(cat => cat.slug ===
            "subject"); const subjectChildCategories =
            categories.filter(category => category.parent &&
            category.parent._id.toString() === subjectCategory._id.toString() );
            %>
            <select
              name="subjectStudent[]"
              class="form-control select2"
              id="subject-student"
              multiple="multiple"
              style="width: 100%"
              required
            >
              <% subjectChildCategories.forEach(childCat => { %>
              <option value="<%= childCat.slug %>">
                <%= childCat.title %>
              </option>
              <% }); %>
            </select>
          </div>

          <!-- Tution Type and Location -->
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="tutionType" class="form-label">Tution Type</label>
              <select
                name="tutionType"
                class="form-control select2"
                id="tutionType"
                style="width: 100%"
                required
              >
                <option value="">Select Type</option>
                <option value="any">Any</option>
                <option value="homeTution">Home Tution</option>
                <option value="physicalTution">Physical Tution</option>
                <option value="onlineTution">Online Tution</option>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label for="studentLocation" class="form-label">Location</label>
              <input
                type="text"
                class="form-control"
                id="studentLocation"
                name="studentLocation"
                required
              />
            </div>
          </div>

          <!-- Phone and Email -->
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="studentPhone" class="form-label">Phone Number</label>
              <input
                type="tel"
                class="form-control"
                id="studentPhone"
                name="studentPhone"
                required
              />
            </div>

            <div class="col-md-6 mb-3">
              <label for="studentEmail" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="studentEmail"
                name="studentEmail"
                required
              />
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Tutoring Days</label>
            <div class="row">
              <div class="box-1 col-6">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="tutoringDays[]"
                    id="day-sunday"
                    value="sunday"
                  />
                  <label class="form-check-label" for="day-sunday"
                    >Sunday</label
                  >
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="tutoringDays[]"
                    id="day-monday"
                    value="monday"
                  />
                  <label class="form-check-label" for="day-monday"
                    >Monday</label
                  >
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="tutoringDays[]"
                    id="day-tuesday"
                    value="tuesday"
                  />
                  <label class="form-check-label" for="day-tuesday"
                    >Tuesday</label
                  >
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="tutoringDays[]"
                    id="day-wednesday"
                    value="wednesday"
                  />
                  <label class="form-check-label" for="day-wednesday"
                    >Wednesday</label
                  >
                </div>
              </div>
              <div class="box-1 col-6">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="tutoringDays[]"
                    id="day-thursday"
                    value="thursday"
                  />
                  <label class="form-check-label" for="day-thursday"
                    >Thursday</label
                  >
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="tutoringDays[]"
                    id="day-friday"
                    value="friday"
                  />
                  <label class="form-check-label" for="day-friday"
                    >Friday</label
                  >
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="tutoringDays[]"
                    id="day-saturday"
                    value="saturday"
                  />
                  <label class="form-check-label" for="day-saturday"
                    >Saturday</label
                  >
                </div>
              </div>
            </div>
          </div>

          <!-- Message -->
          <div class="mb-3">
            <label for="studentMessage" class="form-label">Message</label>
            <textarea
              class="form-control"
              id="studentMessage"
              name="studentMessage"
              rows="3"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
