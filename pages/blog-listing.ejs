
<title>Ig Academy</title>

<!-- Include stylesheets and links -->
<%- include('../partials/header/links') %>

<!-- Desktop Navigation -->
<%- include('../partials/header/desktop_navigation') %>

<!-- Mobile Navigation -->
<%- include('../partials/header/mobile_navigation') %>
<div class="breadcrumb">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-md-6">
        <div class="banner-txt">
          <% if (category){ %>
          <h1 class="tl-breadcrumb-title"><%= category.title %></h1>
          <% } %>
        </div>
      </div>

      <div class="col-md-6">
        <ul class="tl-breadcrumb-nav d-flex">
          <li><a href="index.html">Home</a></li>
          <li class="current-page">
            <i class="fa-solid fa-angle-right"></i>
            <span><%= category.title %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<section class="listing">
  <div class="container">
    <div class="row list-container">
      <% if (posts && posts.length > 0) { %> <%posts.forEach(post=>{ %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="blog-list-card" data-aos="fade-up">
          <a href="/post/<%= post._id %>" class="img-container">
            <img src="<%= post.featured_image %>" alt="" />
          </a>
          <a href="#" class="list-contains">
            <div class="date-line">
              <i class="fa-regular fa-clock"></i> <% const publishedDate = new
              Date(post.published_date); const options = { year: 'numeric',
              month: 'long', day: 'numeric' }; const formattedDate =
              publishedDate.toLocaleDateString('en-US', options); %> <%=
              formattedDate %>
            </div>
            <div class="title"><%= post.title %></div>
            <div class="summary"><%= post.summary %></div>
            <div class="view-more">
              <a href="/post/<%= post._id %>"
                >Read More <i class="fa-solid fa-arrow-right"></i
              ></a>
            </div>
          </a>
        </div>
      </div>
      <% })%> <% } %>

      <div class="pagination" data-aos="fade-up">
        <a href="#">&laquo;</a>
        <a href="#" class="active">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#">4</a>
        <a href="#">5</a>
        <a href="#">&raquo;</a>
      </div>
    </div>
  </div>
</section>

<!-- Include Footer -->
<%- include('../partials/footer/footer') %>

<!-- Include Scripts -->
<%- include('../partials/footer/scripts') %>
