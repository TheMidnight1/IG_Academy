<title>Ig Academy </title>


<!-- Include stylesheets and links -->
<%- include('../partials/header/links') %>


<!-- Desktop Navigation -->
<%- include('../partials/header/desktop_navigation') %>

<!-- Mobile Navigation -->
<%- include('../partials/header/mobile_navigation') %>

<div class="breadcrumb">
    <div class="container">
      <div class="row align-items-end">
        <div class="col-md-6">
          <div class="banner-txt">
            <span class="tl-breadcrumb-title"><%= categoryName[0] %> Details</span>
          </div>
        </div>

        <div class="col-md-6">
          <ul class="tl-breadcrumb-nav d-flex">
            <li><a href="index.html">Home</a></li>
            <li class="current-page">
              <i class="fa-solid fa-angle-right"></i>
              <span><%= categoryName[0] %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

<section class="listing">
  <div class="container">
    <div class="row detail-container">
      <% if(post) { %>
      <div class="col-12 col-md-6 col-lg-7 detail-right">
        <h1 class="subtitle">
          <%= post.title %>

        </h1>
        <div class="date-line pb-3">
          <% 
            const publishedDate = new Date(post.published_date); 
            
            const options = { year: 'numeric', month: 'long', day: 'numeric' }; 
            
            const formattedDate = publishedDate.toLocaleDateString('en-US', options); 
            %>
          <%= formattedDate %>
        </div>
        <div class="img-containers mb-3">
          <img src="<%= post.featured_image %>">
        </div>
        <div class="post-container">
          <!-- <div class="subtitle pb-3">About <%= post?.category[0]?.title%></div> -->
          <div class="info">
            <%- post.content %>
          </div>
        </div>
      </div>
      <% }%>

      <% if(morePosts && morePosts.length > 0) { %>
      <div class="col-12 col-md-5 col-lg-4 detail-left">

        <div class="more-cointainer">
          <div class="subtitle mb-2">More Blog</div>

          <div class="col-12">
            <% morePosts.forEach(morePost => { %>

            <div class="blog-list-card" data-aos="fade-up">
              <a href="/post/<%= morePost._id  %>" class="img-container">
                <img src="<%= morePost.featured_image %>" alt="">
              </a>
              <a href="/post/<%= morePost._id  %>" class="list-contains">
                <div class="date-line"><i class="fa-regular fa-clock"></i>
                  <% 
            const publishedDate = new Date(post.published_date); 
            
            const options = { year: 'numeric', month: 'long', day: 'numeric' }; 
            
            const formattedDate = publishedDate.toLocaleDateString('en-US', options); 
            %>
          <%= formattedDate %>
                </div>
                <div class="title"><%= morePost.title %></div>
                <div class="summary"><%= morePost.sumamry %></div>
                <div class="view-more"><a href="/post/<%= morePost._id  %>">Read More <i class="fa-solid fa-arrow-right"></i></a></div>
              </a>
            </div>
            <% }) %>

          </div>

        </div>
      </div>
      <% }%>

      
    </div>
  </div>
</section>


<!-- Include Footer -->
<%- include('../partials/footer/footer') %>

<!-- Include Scripts -->
<%- include('../partials/footer/scripts') %>
